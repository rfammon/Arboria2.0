{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Arboria",
  "version": "0.1.0",
  "identifier": "com.arboria.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Arboria",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.arboria.app/updater/{{target}}/{{current_version}}"
      ],
      "pubkey": "YOU_MUST_GENERATE_THIS_KEY_AND_PLACE_IT_HERE"
    }
  }
}
